.service-tags {
    margin: 6rpx 0;
    display: flex;
    flex-direction: row;
    justify-content:space-between;
}

.service-pnew {
    color: #ff4500;
    text-align: right;
}
.service-pnew .price-sign{
    font-size: 20rpx;
}

.service-pold {
    color: #A9A9A9;
    font-size: 24rpx;
    float:right;
    text-decoration:line-through;
}

.service-tags .tag-text {
    padding: 6rpx 16rpx;
    border: 1rpx solid #09f;
    line-height: 1;
    color: #09f;
    font-size: 24rpx;
    border-radius: 4rpx;
    margin-right: 10rpx;
    margin-top: 10rpx;
    white-space: nowrap;
}

.service-city {
    color: #666;
    font-size: 28rpx;
}


.search .tophide{
	margin-top: -117rpx;
}

.gototop{
	width: 70rpx;
	height: 70rpx;
	/* background: url(../../images/up.png) no-repeat 50% 50% / 100% auto; */
	position: fixed;
	bottom: 20rpx;
	right: 20rpx;
	transition: all 0.3s;
	opacity: 0;
	transform: translateY(200rpx);
}
.gototop.active{
	opacity: 1;
	transform: translateY(0);
}



