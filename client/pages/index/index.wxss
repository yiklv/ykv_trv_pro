.view_swiper {
    width: 100%;
    border-radius: 100rpx;
    overflow: hidden;
}

.swiper_clz {
    margin: 20rpx 20rpx;
}

.slide-image {
    width: 750rpx;
    height: 296rpx;
}


/*******************************************search css*********************************************/

view.search {
    display: flex;
    flex-direction: row;
    height: 98rpx;
    background: #efeff4;
    align-items: center;
    width: 100%;
}

view.searchItem {
    display: flex;
    width: 100%;
    background: #fff;
    flex-direction: row;
    border-radius: 10rpx;
    margin-right: 20rpx;
    margin-left: 20rpx;
}

view.searchItem image {
    height: 42rpx;
    width: 42rpx;
    align-self: center;
    margin-left: 10rpx;
    margin-right: 20rpx;
}

view.searchItem input {
    flex: 1;
    font-size: 30rpx;
    height: 72rpx
}

/*******************************************search css*********************************************/

