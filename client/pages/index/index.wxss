page {
    background: #f6f6f6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

/***/

.view_swiper {
    width: 100%;
    border-radius: 100rpx;
    overflow: hidden;
}

.swiper_clz {
    margin: 20rpx 20rpx;
}

.slide-image {
    width: 750rpx;
    height: 296rpx;
}

/*******************************************search css*********************************************/

view.search {
    display: flex;
    flex-direction: row;
    height: 98rpx;
    background: #efeff4;
    align-items: center;
    width: 100%;
}

view.searchItem {
    display: flex;
    width: 100%;
    background: #fff;
    flex-direction: row;
    border-radius: 10rpx;
    margin-right: 20rpx;
    margin-left: 20rpx;
}

view.searchItem image {
    height: 42rpx;
    width: 42rpx;
    align-self: center;
    margin-left: 10rpx;
    margin-right: 20rpx;
}

view.searchItem input {
    flex: 1;
    font-size: 30rpx;
    height: 72rpx;
}

/*******************************************search css*********************************************/

.spotView {
}

.spotSingleView {
}

.spotImg {
    width: 300rpx;
    height: 300rpx;
}

.service-list {
    padding: 0 20rpx;
}

.service-item {
    display: flex;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #e8e8e8;
}

.service-img {
    width: 220rpx;
    height: 156rpx;
}

.service-item image {
    width: 220rpx;
    height: 156rpx;
}

.service-text {
    flex: 1;
    margin-left: 20rpx;
    width: 100%;
}

.service-text .service-tite {
    color: #333;
    width: 100%;
    font-size: 34rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.service-price {
    flex: 1;
    margin-left: 20rpx;
    width: 100%;
}

.service-price .service-pnew {
    color: #dc143c;
    text-align: right;
}

.service-price .service-pold {
    color: #A9A9A9;
    font-size: 24rpx;
    float:right;
    text-decoration:line-through;
}

.service-tags {
    margin: 6rpx 0;
}

.service-tags text {
    padding: 6rpx 16rpx;
    border: 1rpx solid #f7982a;
    line-height: 1;
    color: #f7982a;
    font-size: 28rpx;
    border-radius: 4rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
    white-space: nowrap;
}

.service-city {
    color: #666;
    font-size: 28rpx;
}
