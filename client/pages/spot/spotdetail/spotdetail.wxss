/* pages/spot/spotdetail/spotdetail.wxss */

.space-content {
    background: #f9f9f9;
}

.space-top, .space-block {
    padding: 20rpx;
    background: #fff;
    margin-bottom: 20rpx;
    border-bottom: 1rpx solid #ddd;
}

.space-block {
    border-top: 1rpx solid #ddd;
}

.space-banner {
    position: relative;
}

.space-banner swiper {
    width: 100%;
    height: 360rpx;
}

.space-banner .slide-image {
    width: 100%;
    height: 360rpx;
}

.number-banner {
    position: absolute;
    right: 40rpx;
    margin-top: -80rpx;
    padding: 0 16rpx;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 6rpx;
    color: #fff;
    font-size: 36rpx;
}

.number-banner text:last-child {
    color: rgba(255, 255, 255, 0.6);
    font-size: 30rpx;
}

.space-title {
    font-size: 44rpx;
    line-height: 2;
    color: #000;
}

.space-tags {
    margin-bottom: 10rpx;
}

.space-tags text {
    padding: 6rpx 16rpx;
    border: 1rpx solid #f7982a;
    line-height: 1;
    color: #f7982a;
    font-size: 28rpx;
    border-radius: 4rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
    white-space: nowrap;
}

.space-item {
    display: flex;
    font-size: 28rpx;
    color: #555;
    padding: 16rpx 0;
    border-bottom: 1rpx solid #eee;
}

.space-item .text-left {
    width: 20%;
    white-space: nowrap;
}

.space-item .text-orange {
    font-size: 28rpx;
    color: #777;
    line-height: 1;
}

.space-item .text-mid {
    color: #777;
}

.space-item .text-mid-de {
    width: 76%;
    color: #777;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
}

.view-right .text-right {
    color: #777;
    
    flex-direction: column;
}

.text-right image {
    width: 24rpx;
    height: 24rpx;
    
}

.container-footer text.apply-btn {
    background: #f7982a;
    color: #fff;
    flex: 1.5;
}

.space-block-title {
    font-size: 34rpx;
}

.space-block-title:before {
    content: '';
    display: inline-block;
    vertical-align: -6rpx;
    width: 6rpx;
    height: 40rpx;
    background: #09c;
    margin-right: 8rpx;
}

.space-block-content .space-list {
    overflow: hidden;
}

.space-block-content .space-list .space-item {
    width: 50%;
    float: left;
}

.space-passage {
    font-size: 30rpx;
    text-indent: 2em;
    margin-top: 20rpx;
}

.text-mid-de .img_right {
    width: 24rpx;
    height: 24rpx;
}

.img_space {
    padding-left: 20rpx;
}

.tkt-item {
    display: flex;
    font-size: 28rpx;
    color: #555;
    padding: 14rpx 0;
    border-top: 1rpx solid #eee;
}

.text-mid-de .spot_know_txt {
    color: #777;
    font-size: 24rpx;
}

.tkt_type_img {
    width: 24rpx;
    height: 24rpx;
    padding-left: 12rpx;
}

.tkt_img_view {
    width: 7%;
}

.tkt_name_view {
    width: 88%;
}

.show {
    display: block;
}

.hidden {
    display: none;
}
