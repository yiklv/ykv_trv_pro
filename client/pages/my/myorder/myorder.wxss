/* pages/user_info/my_order/my_order.wxss */

.my-container {
  width: 100%;
}

.head-nav {
  width: 100%;
  height: 94rpx;
  background-color: white;
  border-top: 2rpx solid #e9e8ed;
  border-bottom: 2rpx solid #e9e8ed;
  display: flex;
  flex-direction: row;
}

.head-nav > view {
  flex: 1;
  text-align: center;
  line-height: 94rpx;
}

.active-item {
  color: #09f;
  border-bottom: 4rpx solid #09f;
}

.no-order {
  width: 100%;
  text-align: center;
  color: #5b5a60;
  margin-top: 60rpx;
}

.has-order {
  font-size: 24rpx;
}

.has-order >view {
  background-color: white;
}

.has-order > view:not(:nth-child(1)) {
  margin-top: 20rpx;
}

.order-head {
  height: 75rpx;
  padding: 25rpx 20rpx;
  border: 2rpx solid #f0f0f0;
}

.status-price {
  width: 230rpx;
  height: 70rpx;
  float: left;
}

.status-price > view {
  color: #949494;
}

.status-price > view text {
  color: black;
  line-height: 38rpx;
}

.unpaid-color {
  color: #09f !important;
}

.to-pay-btn {
  float: right;
  color: white;
}

.to-pay-btn > button {
  width: 160rpx;
  height: 56rpx;
  background-color: #09f;
  color: white;
  font-size: 24rpx;
  line-height: 56rpx;
  margin-top: 8rpx;
}

.goods-content {
  margin: 0 20rpx;
}

.goods-info {
  width: 100%;
  height: 156rpx;
  /* border-bottom: 1rpx solid #e2e2e2; */
  padding: 28rpx 0;
}

.goods-info > image {
  width: 220rpx;
  height: 156rpx;
  display: inline-block;
  float: left;
}

.goods-info > view {
  width: 463rpx;
  height: 156rpx;
  line-height: 45rpx;
  display: inline-block;
  float: right;
}

.goods-quantity {
  color: #949494;
  display: block;
}
