.wxSearch {
    position: absolute;
    top: 43px;
    left: 0;
    width: 100%;
    height: 100%;
    border-top: 1px #eee solid;
    background-color: rgba(0, 0, 0, 0.2);
}

.wxSearchInner {
    background-color: #fff;
}

.wxSearch-section {
    /* background-color: #C0C0C0; */
    padding: 5px 10px;
    border: 1px #eee solid;
    width: 95%;
}

.wxSearch-pancel {
    display: flex;
    flex-direction: row;
}

.wxSearch-input {
    flex: 8;
    background-color: #eee;
    padding: 5px 10px;
}

.wxSearch-button {
    flex: 1;
    font-size: 32rpx;
    border: none !important;
    color: cornflowerblue !important;
    background-color: #aaa;
}

.wxSearchTitle {
    display: block;
    padding: 10px 10px 10px 10px;
    font-size: 24rpx;
    text-align: left;
}

.wxSearchMindKeyItem {
    padding: 10px 5px;
    border-bottom: 1px solid #eee;
    display: flex;
    font-size: 14px;
    color: cornflowerblue;
}

.wxSearchKeyList {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.wxSearchKeyItem {
    flex: 0 0 20%;
    font-size: 14px;
    text-align: center;
    border: 1px solid #eee;
    margin: 5px;
    padding: 5px 10px;
    border-radius: 5px;
    background-color: #d3d3d3;
}

.wxSearchHistoryList {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.wxSearchHistoryItem {
    padding: 10px 5px;
    border-bottom: 1px solid #eee;
    display: flex;
}

.wxSearchHistoryItemText {
    flex: 8;
    font-size: 14px;
}

.wxSearchHistoryItemDel {
    flex: 1;
    font-size: 12px;
    text-align: center;
    padding: 3px 5px;
    border: 1px solid #eee;
    border-radius: 5px;
    color: #eee;
    background-color: #1e90ff;
}

.wxSearchHistoryEmpty {
    /* text-align: center; */
    height: 50px;
    line-height: 50px;
    font-size: 12px;
    color: red;
}

.wxSearchHisTitle {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content:space-between;
}

.wxSearchDeleteAllBtn {
    color: #1e90ff;
    text-align: right;
    display: block;
    padding: 10px 10px 10px 10px;
    font-size: 24rpx;
    width: 26rpx;
    height: 26rpx;
}
